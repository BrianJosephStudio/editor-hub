{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true, // Emit .d.ts files
    "emitDeclarationOnly": true, // Only emit type declarations
    "module": "ESNext", // Module type
    "target": "ESNext", // Target language version
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // For compatibility with CommonJS and ESModules
  },
  "include": ["src/**/*"],
}
